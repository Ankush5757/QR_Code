{
  "version": 2,
  "builds": [
    {
      "src": "qr_generator/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --no-input",
        "outputDirectory": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "qr_generator/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_DEBUG": "False",
    "DJANGO_ALLOWED_HOSTS": "your-app-name.vercel.app",
    "PYTHON_VERSION": "3.10"
  }
}